        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-bottom: 3px solid #764ba2;
    }

    .admin-title {
        margin: 0;
        color: white;
        font-size: 1.8rem;
        font-weight: 700;
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    /* Table Card */
    .table-card {
        background: white;
    }

    /* Admin Table Styling */
    .admin-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        background: white;
    }

