@model IEnumerable<WebApplication1.Models.GatePassModel>
@{
    ViewData["Title"] = "Gate Pass Request Lists";
}

<div class="gatepass-list-wrapper">
    <!-- Navigation Header -->
    <div class="nav-header-section">
        <div class="nav-title">
            <div class="icon-badge">
                <i class="fas fa-shield-alt"></i>
            </div>
            <h2>Gate Pass Requests</h2>
        </div>
        <a asp-action="Index" class="nav-btn">
            <i class="fas fa-plus"></i>
            Create Gate Pass
        </a>
    </div>

    <!-- Main Card -->
    <div class="gatepass-card">
        <!-- Card Header with Search -->
        <div class="gatepass-card-header">
            <div class="search-container">
                <div class="search-box">
                    <i class="fas fa-search search-icon"></i>
                    <input type="text" id="gatepassSearchInput" class="form-control search-input" placeholder="Search by student name, ID, or plate number..." />
                </div>
            </div>
        </div>

        <!-- Table Content -->
        <div class="table-card">
            <table class="gatepass-table">
                <thead>
                    <tr>
                        <th><i class="fas fa-id-card"></i> Student ID</th>
                        <th><i class="fas fa-user"></i> Name</th>
                        <th><i class="fas fa-graduation-cap"></i> Course</th>
                        <th><i class="fas fa-layer-group"></i> Year</th>
                        <th><i class="fas fa-car-side"></i> Plate No</th>
                        <th><i class="fas fa-tag"></i> Model</th>
                        <th><i class="fas fa-industry"></i> Make</th>
                        <th><i class="fas fa-car-alt"></i> Type</th>
                        <th><i class="fas fa-file-invoice"></i> OR File</th>
                        <th><i class="fas fa-file-alt"></i> CR File</th>
                        <th><i class="fas fa-info-circle"></i> Status</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var obj in Model)
                        {
                            <tr>
                                <td>@obj.StudentIdNo</td>
                                <td>@obj.StudentName</td>
                                <td>@obj.StudentCourse</td>
                                <td>@obj.StudentYear</td>
                                <td>@obj.VehiclePlateNo</td>
                                <td>@obj.VehicleModel</td>
                                <td>@obj.VehicleMake</td>
                                <td>@obj.VehicleType</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(obj.OrDocumentPath))
                                    {
                                        <a href="@obj.OrDocumentPath" target="_blank" class="file-link">
                                            <i class="fas fa-eye"></i> View OR
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No file</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(obj.CrDocumentPath))
                                    {
                                        <a href="@obj.CrDocumentPath" target="_blank" class="file-link">
                                            <i class="fas fa-eye"></i> View CR
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No file</span>
                                    }
                                </td>
                                <td>
                                    @{ 
                                        var status = string.IsNullOrEmpty(obj.Status) ? "Pending" : obj.Status;
                                        var badgeClass = status == "Approved" ? "approved" : status == "Rejected" ? "rejected" : "pending";
                                    }
                                    <span class="status-badge @badgeClass">@status</span>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr id="emptyState">
                            <td colspan="11" class="text-center py-5">
                                <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                                <p class="text-muted">No gate pass requests yet. Create your first request!</p>
                            </td>
                        </tr>
                    }
                    <tr id="noResults" style="display:none;">
                        <td colspan="11" class="text-center py-4">
                            <i class="fas fa-search fa-2x text-muted mb-2"></i>
                            <p class="text-muted">No search results found</p>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <!-- Card Footer -->
        <div class="card-footer">
            <a asp-controller="Home" asp-action="Index" class="btn-back">
                <i class="fas fa-arrow-left"></i> Back to Home
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var input = document.getElementById('gatepassSearchInput');
            if (!input) return;
            var rows = function() { 
                return Array.from(document.querySelectorAll('.gatepass-table tbody tr'))
                    .filter(r => r.id !== 'noResults' && r.id !== 'emptyState'); 
            };
            var noResults = document.getElementById('noResults');
            var emptyState = document.getElementById('emptyState');

            input.addEventListener('input', function(e) {
                var q = e.target.value.toLowerCase().trim();
                var visible = 0;
                rows().forEach(function(r) {
                    // student ID is cell 0, name is 1, plate is 4
                    var studentId = (r.cells[0]?.textContent || '').toLowerCase();
                    var name = (r.cells[1]?.textContent || '').toLowerCase();
                    var plate = (r.cells[4]?.textContent || '').toLowerCase();
                    if (!q || studentId.indexOf(q) > -1 || name.indexOf(q) > -1 || plate.indexOf(q) > -1) {
                        r.style.display = 'table-row';
                        visible++;
                    } else {
                        r.style.display = 'none';
                    }
                });
                if (emptyState) emptyState.style.display = 'none';
                if (noResults) noResults.style.display = visible === 0 ? 'table-row' : 'none';
            });
        });
    </script>
}

<style>
    /* Main Container */
    .gatepass-list-wrapper {
        padding: 2rem;
        background: linear-gradient(to bottom, #1e3c72 0%, #2a5298 100%);
        min-height: 100vh;
    }

    /* Navigation Header */
    .nav-header-section {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
        padding: 1.5rem 2rem;
        background: white;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        gap: 2rem;
    }

    .nav-title {
        flex: 1;
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .icon-badge {
        width: 50px;
        height: 50px;
        background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.5rem;
    }

    .nav-title h2 {
        margin: 0;
        color: #1e3c72;
        font-size: 1.8rem;
        font-weight: 700;
    }

    .nav-btn {
        background: #f59e0b;
        color: white;
        padding: 0.75rem 1.5rem;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        text-decoration: none;
    }

    .nav-btn:hover {
        background: #d97706;
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(245, 158, 11, 0.4);
        color: white;
    }

    /* Gate Pass Card */
    .gatepass-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        overflow: hidden;
    }

    .gatepass-card-header {
        padding: 1.5rem 2rem;
        background: white;
        border-bottom: 1px solid #e2e8f0;
    }

    /* Search Container */
    .search-container {
        max-width: 100%;
    }

    .search-box {
        position: relative;
        display: flex;
        align-items: center;
    }

    .search-icon {
        position: absolute;
        left: 1rem;
        color: #1e3c72;
        font-size: 1.1rem;
        z-index: 1;
    }

    .search-input {
        width: 100%;
        padding: 0.75rem 1rem 0.75rem 2.5rem;
        border: 2px solid #e2e8f0;
        border-radius: 8px;
        font-size: 0.95rem;
        transition: all 0.3s ease;
        background: white;
    }

    .search-input:focus {
        outline: none;
        border-color: #1e3c72;
        box-shadow: 0 0 0 3px rgba(30, 60, 114, 0.1);
    }

    /* Table Card */
    .table-card {
        background: white;
        overflow-x: auto;
    }

    /* Gate Pass Table Styling */
    .gatepass-table {
        width: 100%;
        border-collapse: collapse;
        background: white;
    }

    .gatepass-table thead {
        background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
        color: white;
    }

    .gatepass-table th {
        padding: 1rem 1.5rem;
        text-align: left;
        font-weight: 600;
        white-space: nowrap;
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .gatepass-table th i {
        margin-right: 0.5rem;
        opacity: 0.9;
    }

    .gatepass-table td {
        padding: 1rem 1.5rem;
        border-bottom: 1px solid #f1f5f9;
        color: #334155;
        font-size: 0.95rem;
        vertical-align: middle;
    }

    .gatepass-table tbody tr {
        transition: background-color 0.15s ease;
    }

    .gatepass-table tbody tr:hover:not(#noResults):not(#emptyState) {
        background-color: #f8fafc;
    }

    /* Status Badges */
    .status-badge {
        padding: 0.4rem 0.8rem;
        border-radius: 6px;
        font-weight: 600;
        font-size: 0.85rem;
        display: inline-block;
    }

    .status-badge.pending {
        background: #fef3c7;
        color: #92400e;
    }

    .status-badge.approved {
        background: #d1fae5;
        color: #065f46;
    }

    .status-badge.rejected {
        background: #fee2e2;
        color: #991b1b;
    }

    /* File Link */
    .file-link {
        color: #1e3c72;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.2s ease;
        display: inline-flex;
        align-items: center;
        gap: 0.3rem;
    }

    .file-link:hover {
        color: #2a5298;
        text-decoration: underline;
    }

    /* Card Footer */
    .card-footer {
        padding: 1.5rem 2rem;
        background: white;
        border-top: 1px solid #e2e8f0;
    }

    .btn-back {
        background: #f1f5f9;
        color: #334155;
        padding: 0.6rem 1.2rem;
        border-radius: 6px;
        font-weight: 600;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        transition: all 0.2s ease;
    }

    .btn-back:hover {
        background: #1e3c72;
        color: white;
    }

    @@media (max-width: 768px) {
        .nav-header-section {
            flex-direction: column;
            gap: 1rem;
        }

        .nav-title {
            flex-direction: column;
            text-align: center;
        }

        .nav-title h2 {
            font-size: 1.5rem;
        }

        .gatepass-list-wrapper {
            padding: 1rem;
        }

        .gatepass-table {
            font-size: 0.85rem;
        }

        .gatepass-table th,
        .gatepass-table td {
            padding: 0.75rem 0.5rem;
        }
    }
</style>






