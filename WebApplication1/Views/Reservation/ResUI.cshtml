@model IEnumerable<WebApplication1.Models.Reservation>
@{
    ViewData["Title"] = "Reservation List";
}

<div class="reservation-content-wrapper">
    <div class="reservation-header-section">
        <div class="header-content">
            <h1 class="reservation-main-title">
                <i class="fas fa-calendar-check"></i> Reservation List
            </h1>
            <p class="reservation-subtitle">View and manage all venue reservations</p>
        </div>
        <a asp-controller="Reservation" asp-action="Add" class="create-btn">
            <i class="fas fa-plus-circle"></i> Create Reservation
        </a>
    </div>

    <div class="search-container">
        <div class="search-wrapper">
            <i class="fas fa-search search-icon"></i>
            <input type="text" id="searchInput" class="search-input" 
                   placeholder="🔍 Search by organization, activity, speaker, or date..." />
        </div>
    </div>

    <div class="table-card">
        <div class="table-responsive">
            <table class="reservation-table">
                <thead>
                    <tr>
                        <th><i class="fas fa-calendar"></i> Date Needed</th>
                        <th><i class="fas fa-clock"></i> Time From</th>
                        <th><i class="fas fa-clock"></i> Time To</th>
                        <th><i class="fas fa-users"></i> Participants</th>
                        <th><i class="fas fa-calendar-day"></i> Date</th>
                        <th><i class="fas fa-microphone"></i> Speaker</th>
                        <th><i class="fas fa-bullseye"></i> Purpose/Objective</th>
                        <th><i class="fas fa-tools"></i> Equipment/Facilities</th>
                        <th><i class="fas fa-tag"></i> Nature of Activity</th>
                        <th><i class="fas fa-dollar-sign"></i> Source of Funds</th>
                        <th><i class="fas fa-info-circle"></i> Status</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var reservation in Model)
                {
                    <tr>
                        <td>@reservation.DateNeeded.ToString("MM/dd/yyyy")</td>
                        <td>@reservation.TimeFrom.ToString("hh:mm tt")</td>
                        <td>@reservation.TimeTo.ToString("hh:mm tt")</td>
                        <td>@reservation.Participants</td>
                        <td>@reservation.Date.ToString("MM/dd/yyyy")</td>
                        <td>@reservation.Speaker</td>
                        <td>@reservation.PurposeObjective</td>
                        <td>@reservation.EquipmentFacilities</td>
                        <td>@reservation.NatureOfActivity</td>
                        <td>@reservation.SourceOfFunds</td>
                        <td>
                            @{
                                var status = reservation.Approved == null ? "Pending" : 
                                           reservation.Approved == true ? "Approved" : "Rejected";
                                var statusClass = status == "Approved" ? "bg-success" :
                                                status == "Rejected" ? "bg-danger" : "bg-warning";
                            }
                            <span class="badge @statusClass">@status</span>
                            @if (!string.IsNullOrEmpty(reservation.Approver) && reservation.Approved != null)
                            {
                                <br /><small class="text-muted">by @reservation.Approver</small>
                            }
                        </td>
                    </tr>
                }
                <tr id="noResults" style="display: none;">
                    <td colspan="11" class="text-center">No search results found</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="pagination-footer">
        <nav aria-label="Page navigation">
            <ul class="pagination">
                @if (ViewBag.CurrentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("ResUI", new { page = ViewBag.CurrentPage - 1 })">
                            <i class="fas fa-chevron-left"></i> Previous
                        </a>
                    </li>
                }
                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                        <a class="page-link" href="@Url.Action("ResUI", new { page = i })">@i</a>
                    </li>
                }
                @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("ResUI", new { page = ViewBag.CurrentPage + 1 })">
                            Next <i class="fas fa-chevron-right"></i>
                        </a>
                    </li>
                }
            </ul>
        </nav>
        <a asp-controller="Reservation" asp-action="Add" class="back-btn">
            <i class="fas fa-arrow-left"></i> Back to form
        </a>
    </div>
</div>

<style>
    /* Main Container */
    .reservation-content-wrapper {
        padding: 2rem;
        background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
        min-height: 100vh;
    }

    /* Header Section */
    .reservation-header-section {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
        padding: 1.5rem;
        background: white;
        border-radius: 15px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    }

    .header-content {
        flex: 1;
    }

    .reservation-main-title {
        font-size: 2.5rem;
        color: #1a237e;
        margin: 0;
        font-weight: 700;
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .reservation-main-title i {
        color: #1e3c72;
    }

    .reservation-subtitle {
        color: #6c757d;
        margin: 0.5rem 0 0 0;
        font-size: 1.1rem;
    }

    .create-btn {
        background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
        color: white;
        padding: 1rem 2rem;
        border-radius: 50px;
        text-decoration: none;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(30, 60, 114, 0.4);
    }

    .create-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(30, 60, 114, 0.6);
        color: white;
    }

    /* Search Container */
    .search-container {
        margin-bottom: 2rem;
        padding: 1.5rem;
        background: white;
        border-radius: 15px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    }

    .search-wrapper {
        position: relative;
        max-width: 100%;
    }

    .search-icon {
        position: absolute;
        left: 1.5rem;
        top: 50%;
        transform: translateY(-50%);
        color: #1e3c72;
        font-size: 1.2rem;
    }

    .search-input {
        width: 100%;
        padding: 1.2rem 1.5rem 1.2rem 4rem;
        border: 2px solid #e0e0e0;
        border-radius: 50px;
        font-size: 1rem;
        transition: all 0.3s ease;
    }

    .search-input:focus {
        outline: none;
        border-color: #1e3c72;
        box-shadow: 0 0 0 4px rgba(30, 60, 114, 0.1);
    }

    /* Table Card */
    .table-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        overflow: hidden;
        margin-bottom: 2rem;
    }

    .table-responsive {
        overflow-x: auto;
    }

    /* Table Styling */
    .reservation-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        background: white;
    }

    .reservation-table thead tr {
        background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
        color: white;
    }

    .reservation-table th {
        padding: 1.2rem 1rem;
        text-align: left;
        font-weight: 600;
        white-space: nowrap;
        font-size: 0.95rem;
        border-bottom: 3px solid #2a5298;
    }

    .reservation-table th i {
        margin-right: 0.5rem;
        opacity: 0.9;
    }

    .reservation-table td {
        padding: 1rem;
        border-bottom: 1px solid #f0f0f0;
        color: #333;
        font-size: 0.9rem;
        vertical-align: middle;
    }

    .reservation-table tbody tr {
        transition: all 0.3s ease;
    }

    .reservation-table tbody tr:hover {
        background-color: #f8f9ff;
        transform: scale(1.01);
        box-shadow: 0 2px 10px rgba(102, 126, 234, 0.1);
    }

    .reservation-table tr:last-child td {
        border-bottom: none;
    }

    /* Status Badges */
    .badge {
        padding: 0.6rem 1.2rem;
        border-radius: 50px;
        font-weight: 600;
        font-size: 0.85rem;
        display: inline-block;
        box-shadow: 0 2px 8px rgba(0,0,0,0.15);
    }

    .bg-success {
        background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
        color: white;
    }

    .bg-danger {
        background: linear-gradient(135deg, #eb3349 0%, #f45c43 100%);
        color: white;
    }

    .bg-warning {
        background: linear-gradient(135deg, #f2994a 0%, #f2c94c 100%);
        color: #000;
    }

    .text-muted {
        color: #6c757d !important;
        font-size: 0.8rem;
        font-style: italic;
    }

    /* Pagination Footer */
    .pagination-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1.5rem;
        background: white;
        border-radius: 15px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        flex-wrap: wrap;
        gap: 1rem;
    }

    .pagination {
        margin: 0;
        display: flex;
        gap: 0.5rem;
    }

    .page-link {
        color: #1e3c72;
        padding: 0.6rem 1rem;
        border: 2px solid #e0e0e0;
        border-radius: 10px;
        text-decoration: none;
        transition: all 0.3s ease;
        font-weight: 500;
    }

    .page-link:hover {
        background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
        color: white;
        border-color: #1e3c72;
        transform: translateY(-2px);
    }

    .page-item.active .page-link {
        background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
        color: white;
        border-color: #1e3c72;
        box-shadow: 0 4px 15px rgba(30, 60, 114, 0.4);
    }

    .back-btn {
        padding: 0.8rem 1.5rem;
        background: #6c757d;
        color: white;
        border-radius: 10px;
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        transition: all 0.3s ease;
        font-weight: 500;
    }

    .back-btn:hover {
        background: #5a6268;
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(108, 117, 125, 0.4);
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .reservation-header-section {
            flex-direction: column;
            gap: 1rem;
            text-align: center;
        }

        .reservation-main-title {
            font-size: 1.8rem;
            justify-content: center;
        }

        .pagination-footer {
            flex-direction: column;
        }

        .reservation-table {
            font-size: 0.85rem;
        }

        .reservation-table th,
        .reservation-table td {
            padding: 0.8rem 0.5rem;
        }
    }

    /* No Results Row */
    #noResults {
        background: #f8f9fa;
    }

    #noResults td {
        text-align: center;
        padding: 2rem;
        color: #6c757d;
        font-size: 1.1rem;
        font-weight: 500;
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function(){
            $("#searchInput").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                var rows = $("table tbody tr").not('#noResults');
                var visibleRows = 0;

                rows.each(function() {
                    var text = $(this).text().toLowerCase();
                    if(text.indexOf(value) > -1) {
                        $(this).show();
                        visibleRows++;
                    }
                    else {
                        $(this).hide();
                    }
                });

                if (visibleRows === 0) {
                    $('#noResults').show();
                } else {
                    $('#noResults').hide();
                }
            });
        });
    </script>
}


