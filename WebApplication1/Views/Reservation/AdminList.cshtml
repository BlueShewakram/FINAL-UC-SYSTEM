@model IEnumerable<WebApplication1.Models.Reservation>
@{
    ViewData["Title"] = "Reservation Admin";
}

<style>
    .container {
        max-width: 100% !important;
        padding: 0 !important;
    }

    .reservation-container {
        background: white;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        overflow: hidden;
    }

    .reservation-header {
        background: white;
        padding: 1.5rem 2rem;
        border-bottom: 1px solid #e2e8f0;
    }

    .reservation-title {
        margin: 0;
        color: #1e3c72;
        font-size: 1.5rem;
        font-weight: 700;
    }

    .search-container {
        padding: 1.5rem 2rem;
        background: white;
        border-bottom: 1px solid #e2e8f0;
    }

    .search-input {
        width: 100%;
        padding: 0.75rem 1rem;
        border: 2px solid #e2e8f0;
        border-radius: 8px;
        font-size: 0.95rem;
        transition: all 0.3s ease;
    }

    .search-input:focus {
        outline: none;
        border-color: #1e3c72;
        box-shadow: 0 0 0 3px rgba(30, 60, 114, 0.1);
    }

    .table-responsive {
        background: white;
        overflow-x: auto;
    }

    .reservation-table {
        width: 100%;
        border-collapse: collapse;
        background: white;
    }

    .reservation-table thead {
        background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
        color: white;
    }

    .reservation-table th {
        padding: 1rem 1.5rem;
        text-align: left;
        font-weight: 600;
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        white-space: nowrap;
    }

    .reservation-table td {
        padding: 1rem 1.5rem;
        border-bottom: 1px solid #f1f5f9;
        color: #334155;
        font-size: 0.95rem;
        vertical-align: middle;
    }

    .reservation-table tbody tr {
        transition: background-color 0.15s ease;
    }

    .reservation-table tbody tr:hover {
        background-color: #f8fafc;
    }

    /* Status Badges */
    .status-badge {
        display: inline-block;
        padding: 0.4rem 0.8rem;
        border-radius: 6px;
        font-size: 0.85rem;
        font-weight: 600;
    }

    .status-badge.pending {
        background: #fef3c7;
        color: #92400e;
    }

    .status-badge.approved {
        background: #d1fae5;
        color: #065f46;
    }

    .status-badge.rejected {
        background: #fee2e2;
        color: #991b1b;
    }

    /* Action Buttons */
    .btn {
        padding: 0.4rem 0.8rem;
        border: none;
        border-radius: 6px;
        font-size: 0.85rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s;
    }

    .btn-success {
        background: #d1fae5;
        color: #065f46;
    }

    .btn-success:hover {
        background: #10b981;
        color: white;
    }

    .btn-warning {
        background: #fef3c7;
        color: #92400e;
    }

    .btn-warning:hover {
        background: #f59e0b;
        color: white;
    }

    .btn-danger {
        background: #fee2e2;
        color: #991b1b;
    }

    .btn-danger:hover {
        background: #ef4444;
        color: white;
    }

    /* Pagination */
    .pagination {
        display: flex;
        gap: 0.5rem;
        list-style: none;
        margin: 1.5rem 0;
        padding: 0 2rem;
        justify-content: center;
    }

    .page-item {
        display: inline-block;
    }

    .page-link {
        display: flex;
        align-items: center;
        justify-content: center;
        min-width: 36px;
        height: 36px;
        padding: 0 0.75rem;
        border: 1px solid #e2e8f0;
        background: white;
        color: #334155;
        border-radius: 6px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.2s;
    }

    .page-link:hover {
        background: #1e3c72;
        color: white;
        border-color: #1e3c72;
    }

    .page-item.active .page-link {
        background: #1e3c72;
        color: white;
        border-color: #1e3c72;
    }

    .text-muted {
        color: #94a3b8;
        font-size: 0.8rem;
    }

    @@media (max-width: 768px) {
        .reservation-table {
            font-size: 0.85rem;
        }

        .reservation-table th,
        .reservation-table td {
            padding: 0.75rem 0.5rem;
        }
    }
</style>

<div class="container py-4">
    <div class="reservation-container">
        <div class="reservation-header">
            <h1 class="reservation-title">Reservation List</h1>
        </div>

        <div class="search-container">
            <input type="text" id="searchReservationInput" class="search-input" placeholder="Search by organization, activity, speaker, or date..." oninput="filterReservationTable(this.value)" />
        </div>

        <div class="table-responsive">
            <table class="reservation-table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Organization</th>
                    <th>Activity Title</th>
                    <th>Date Needed</th>
                    <th>Time From</th>
                    <th>Time To</th>
                    <th>Participants</th>
                    <th>Date</th>
                    <th>Speaker</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @{ int counter = 1; }
                @foreach (var r in Model)
                {
                    <tr>
                        <td>@(counter++)</td>
                        <td>@r.Organization</td>
                        <td>@r.ActTitle</td>
                        <td>@r.DateNeeded.ToString("MM/dd/yyyy")</td>
                        <td>@r.TimeFrom.ToString("hh:mm tt")</td>
                        <td>@r.TimeTo.ToString("hh:mm tt")</td>
                        <td>@r.Participants</td>
                        <td>@r.Date.ToString("MM/dd/yyyy")</td>
                        <td>@r.Speaker</td>
                        <td>
                            @{
                                var status = r.Approved == null ? "Pending" : r.Approved == true ? "Approved" : "Rejected";
                            }
                            <span class="status-badge @(status.ToLower())">
                                @status
                            </span>
                            @if (!string.IsNullOrEmpty(r.Approver))
                            {
                                <br /><small class="text-muted">by @r.Approver</small>
                            }
                        </td>
                        <td style="white-space:nowrap;">
                            @* Show Approve/Reject when Pending; otherwise show single action(s) *@
                            @if (r.Approved == null)
                            {
                                <form class="admin-action-form" asp-action="Approve" asp-controller="Reservation" method="post" style="display:inline; margin-right:4px;">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@r.Id" />
                                    <input type="hidden" name="approved" value="true" />
                                    <button type="submit" class="btn btn-success btn-sm">Approve</button>
                                </form>

                                <form class="admin-action-form" asp-action="Reject" asp-controller="Reservation" method="post" style="display:inline; margin-right:4px;">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@r.Id" />
                                    <button type="submit" class="btn btn-warning btn-sm">Reject</button>
                                </form>
                            }

                            <form class="admin-action-form" asp-action="Delete" asp-controller="Reservation" method="post" style="display:inline" data-confirm="Are you sure you want to delete this reservation?">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@r.Id" />
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <nav aria-label="Page navigation" class="d-flex justify-content-center mt-3">
        <ul class="pagination">
            @if (ViewBag.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link admin-page-link" href="@Url.Action("AdminList", "Reservation", new { page = ViewBag.CurrentPage - 1 })">&laquo;</a>
                </li>
            }
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                    <a class="page-link admin-page-link" href="@Url.Action("AdminList", "Reservation", new { page = i })">@i</a>
                </li>
            }
            @if (ViewBag.CurrentPage < ViewBag.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link admin-page-link" href="@Url.Action("AdminList", "Reservation", new { page = ViewBag.CurrentPage + 1 })">&raquo;</a>
                </li>
            }
        </ul>
    </nav>

</div>

<script>
    // Track all reservations data for client-side search
    var allReservationsData = [];
    
    // Define the search filter function globally so oninput can call it
    function filterReservationTable(searchText) {
        console.log('Filter called with:', searchText);
        searchText = searchText.toLowerCase().trim();
        
        if (!searchText) {
            // If no search text, show pagination and current page only
            showPaginationView();
            return;
        }
        
        // When searching, fetch all reservations and display filtered results
        fetchAllReservationsAndFilter(searchText);
    }
    
    function showPaginationView() {
        const tableRows = document.querySelectorAll('.reservation-table tbody tr');
        const pagination = document.querySelector('nav[aria-label="Page navigation"]');
        
        // Show all rows (server already paginated them)
        tableRows.forEach(row => {
            row.style.display = '';
        });
        
        // Show pagination
        if (pagination) {
            pagination.style.display = '';
        }
    }
    
    function fetchAllReservationsAndFilter(searchText) {
        const tbody = document.querySelector('.reservation-table tbody');
        const pagination = document.querySelector('nav[aria-label="Page navigation"]');
        
        if (!tbody) return;
        
        // Hide pagination during search
        if (pagination) {
            pagination.style.display = 'none';
        }
        
        // Fetch all reservations from server
        fetch('/Reservation/AdminList?page=1&pageSize=1000', {
            headers: { 'X-Requested-With': 'XMLHttpRequest' }
        })
        .then(response => response.text())
        .then(html => {
            // Parse the HTML to extract all reservation rows
            const parser = new DOMParser();
            const doc = parser.parseFromString(html, 'text/html');
            const allRows = doc.querySelectorAll('.reservation-table tbody tr');
            
            // Clear current tbody
            tbody.innerHTML = '';
            
            // Filter and add matching rows
            let matchCount = 0;
            allRows.forEach(row => {
                const text = row.textContent.toLowerCase();
                if (text.includes(searchText)) {
                    tbody.appendChild(row.cloneNode(true));
                    matchCount++;
                }
            });
            
            // Show message if no results
            if (matchCount === 0) {
                tbody.innerHTML = '<tr><td colspan="11" class="text-center" style="padding: 2rem;">No reservations found matching "' + searchText + '"</td></tr>';
            }
            
            console.log('Filtered results:', matchCount);
        })
        .catch(err => {
            console.error('Error fetching reservations:', err);
        });
    }
</script>